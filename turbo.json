{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "test": {
            "dependsOn": ["^build"],
            "inputs": [
                "$TURBO_DEFAULT$",
                "src/**/*.test.ts",
                "src/**/*.spec.ts"
            ],
            "outputs": ["coverage/**"]
        },
        "test:coverage": {
            "dependsOn": ["^build"],
            "inputs": [
                "$TURBO_DEFAULT$",
                "src/**/*.test.ts",
                "src/**/*.spec.ts"
            ],
            "outputs": ["coverage/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
