{
  "name": "@mextrack/database",
  "version": "1.0.0",
  "description": "Shared database client, migrations, and seeds",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "migrate": "tsx src/scripts/migrate.ts",
    "migrate:create": "tsx src/scripts/create-migration.ts",
    "rollback": "tsx src/scripts/rollback.ts",
    "seed": "NODE_ENV=development tsx src/scripts/seed.ts",
    "seed:prod": "NODE_ENV=production tsx src/scripts/seed.ts",
    "reset": "tsx src/scripts/reset.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "postgres": "^3.4.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
