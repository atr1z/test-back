{
    "name": "@atriz/core",
    "version": "1.0.0",
    "description": "Core shared framework and utilities for Atriz backend applications",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rm -rf dist",
        "type-check": "tsc --noEmit",
        "test": "vitest run",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "test:ui": "vitest --ui",
        "lint": "eslint src --ext .ts,.tsx --fix",
        "lint:check": "eslint src --ext .ts,.tsx",
        "db:migrate": "node ../../scripts/migrate.mjs up core",
        "db:migrate:up": "node ../../scripts/migrate.mjs up core",
        "db:migrate:down": "node ../../scripts/migrate.mjs down core",
        "db:migrate:status": "node ../../scripts/migrate.mjs status core",
        "db:migrate:create": "node ../../scripts/migrate.mjs create core",
        "db:migrate:tracking": "node ../../scripts/migrate.mjs up tracking",
        "db:migrate:tracking:up": "node ../../scripts/migrate.mjs up tracking",
        "db:migrate:tracking:down": "node ../../scripts/migrate.mjs down tracking",
        "db:migrate:tracking:status": "node ../../scripts/migrate.mjs status tracking",
        "db:migrate:tracking:create": "node ../../scripts/migrate.mjs create tracking",
        "db:seed": "node ../../scripts/seed.mjs run core",
        "db:seed:run": "node ../../scripts/seed.mjs run core",
        "db:seed:create": "node ../../scripts/seed.mjs create core",
        "db:seed:tracking": "node ../../scripts/seed.mjs run tracking",
        "db:seed:tracking:create": "node ../../scripts/seed.mjs create tracking"
    },
    "keywords": [
        "atriz",
        "core",
        "framework",
        "backend",
        "typescript"
    ],
    "author": "Atriz",
    "license": "UNLICENSED",
    "devDependencies": {
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.19",
        "@types/express": "*",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/mime-types": "*",
        "@types/multer": "*",
        "@types/node": "*",
        "@types/pg": "^8.15.5",
        "@typescript-eslint/eslint-plugin": "*",
        "@typescript-eslint/parser": "*",
        "@vitest/coverage-v8": "^2.1.9",
        "@vitest/ui": "^2.1.9",
        "eslint": "*",
        "node-pg-migrate": "^8.0.3",
        "prettier": "*",
        "typescript": "*",
        "vitest": "^2.1.9"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.918.0",
        "@aws-sdk/s3-request-presigner": "^3.918.0",
        "@socket.io/redis-adapter": "^8.3.0",
        "bcryptjs": "^3.0.2",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "ioredis": "^5.8.2",
        "jsonwebtoken": "^9.0.2",
        "mime-types": "^3.0.1",
        "minio": "^8.0.6",
        "multer": "^2.0.2",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "socket.io": "^4.8.1",
        "tsyringe": "^4.10.0"
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "restricted"
    }
}