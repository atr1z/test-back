{
  "name": "atriz-backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:atriz": "turbo run build --filter=@atriz/website",
    "build:mextrack": "turbo run build --filter=@atriz/mextrack-api",
    "build:pshop": "turbo run build --filter=@atriz/pshop-api",
    "dev": "turbo run dev",
    "dev:atriz": "turbo run dev --filter=@atriz/website",
    "dev:mextrack": "turbo run dev --filter=@atriz/mextrack-api",
    "dev:pshop": "turbo run dev --filter=@atriz/pshop-api",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "turbo run format",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:atriz": "turbo run test --filter=@atriz/website",
    "test:mextrack": "turbo run test --filter=@atriz/mextrack-api",
    "test:pshop": "turbo run test --filter=@atriz/pshop-api",
    "clean": "turbo run clean",
    "clean:cache": "turbo daemon clean",
    
    "db:create": "node scripts/create-databases.js",
    "db:clean": "node scripts/clean-database.js all",
    "db:clean:shared": "node scripts/clean-database.js shared",
    "db:clean:atriz": "node scripts/clean-database.js atriz",
    "db:clean:mextrack": "node scripts/clean-database.js mextrack",
    "db:clean:pshop": "node scripts/clean-database.js pshop",
    "db:migrate": "turbo run migrate",
    "db:migrate:core": "pnpm --filter @atriz/core migrate",
    "db:migrate:atriz": "pnpm --filter @atriz/website migrate",
    "db:migrate:mextrack": "pnpm --filter @atriz/mextrack-api migrate",
    "db:migrate:pshop": "pnpm --filter @atriz/pshop-api migrate",
    "db:seed": "turbo run seed",
    "db:seed:core": "pnpm --filter @atriz/core seed",
    "db:seed:atriz": "pnpm --filter @atriz/website seed",
    "db:seed:mextrack": "pnpm --filter @atriz/mextrack-api seed",
    "db:seed:pshop": "pnpm --filter @atriz/pshop-api seed",
    
    "changeset": "changeset",
    "version-packages": "changeset version"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "pg": "^8.11.3",
    "prettier": "^3.0.3",
    "turbo": "^2.1.0",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
