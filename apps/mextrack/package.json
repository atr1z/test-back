{
  "name": "@atriz/mextrack-api",
  "version": "0.0.0",
  "private": true,
  "description": "Fleet tracking and vehicle management API",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "migrate": "tsx migrate.ts",
    "migrate:up": "tsx migrate.ts up",
    "migrate:down": "tsx migrate.ts down",
    "migrate:create": "node-pg-migrate create --migration-file-language sql --migrations-dir migrations",
    "seed": "tsx seed.ts"
  },
  "dependencies": {
    "@atriz/core": "workspace:*",
    "@atriz/auth": "workspace:*",
    "@atriz/database": "workspace:*",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "tsyringe": "^4.8.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "prettier": "^3.0.3",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0"
  }
}

