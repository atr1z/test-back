{
    "name": "@backend/atriz",
    "version": "0.0.1",
    "description": "Atriz package for Atriz backend applications",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/index.ts",
        "start": "node dist/index.js",
        "clean": "rm -rf dist *.tsbuildinfo",
        "type-check": "tsc --noEmit",
        "check-types": "tsc --noEmit",
        "test": "vitest run",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "test:ui": "vitest --ui",
        "lint": "eslint src --ext .ts,.tsx --fix",
        "lint:check": "eslint src --ext .ts,.tsx",
        "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,md}",
        "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,json,md}",
        "prebuild": "pnpm clean",
        "postbuild": "echo 'Build completed successfully'",
        "predev": "echo 'Starting development mode...'",
        "prestart": "pnpm build",
        "db:migrate": "node ../../scripts/migrate.mjs up core",
        "db:migrate:up": "node ../../scripts/migrate.mjs up core",
        "db:migrate:down": "node ../../scripts/migrate.mjs down core",
        "db:migrate:status": "node ../../scripts/migrate.mjs status core",
        "db:migrate:create": "node ../../scripts/migrate.mjs create core",
        "db:seed": "node ../../scripts/seed.mjs run atriz",
        "db:seed:run": "node ../../scripts/seed.mjs run atriz",
        "db:seed:create": "node ../../scripts/seed.mjs create atriz"
    },
    "keywords": [
        "website",
        "atriz",
        "backend",
        "typescript"
    ],
    "author": "Atriz",
    "license": "UNLICENSED",
    "devDependencies": {
        "@types/express": "*",
        "@types/node": "*",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "*",
        "@typescript-eslint/parser": "*",
        "@vitest/coverage-v8": "^2.1.9",
        "@vitest/ui": "^2.1.9",
        "eslint": "*",
        "globals": "^16.4.0",
        "prettier": "*",
        "supertest": "^7.1.4",
        "tsx": "^4.20.6",
        "typescript": "*",
        "vitest": "^2.1.9"
    },
    "dependencies": {
        "@atriz/core": "workspace:*",
        "express": "^5.1.0",
        "reflect-metadata": "^0.2.2"
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "restricted"
    }
}
